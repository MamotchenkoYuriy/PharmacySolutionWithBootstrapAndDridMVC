@using GridMvc.Html
@model IEnumerable<PharmacySolution.Web.Core.Models.MedicamentPriceHistoryViewModel>

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(foo => foo.MedicamentName).Titled("OrderId").SetWidth("20%").Sortable(true);
    columns.Add(foo => foo.ModifiedDate).Titled("MedicamentName").SetWidth("30%").Sortable(true);
    columns.Add(foo => foo.Price).Titled("Count").SetWidth("20%").Sortable(true);
    columns.Add().Titled("").Encoded(false).Sanitized(false).RenderValueAs(m =>
        @Html.ActionLink("Delete", "Delete", new { id = m.Id }, new { @class = " btn btn-danger" })).SetWidth("30%");
}).WithPaging(5)
