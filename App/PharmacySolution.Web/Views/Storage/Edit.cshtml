@model PharmacySolution.Web.Core.Models.StorageCreateViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<script src="~/Scripts/jquery-1.10.2.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Order", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PharmacyId, ViewBag.Pharmacies as SelectList)
                @Html.ValidationMessageFor(model => model.PharmacyId)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Medicament", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MedicamentId, ViewBag.Medicaments as SelectList)
                @Html.ValidationMessageFor(model => model.MedicamentId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Count, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Count)
                @Html.ValidationMessageFor(model => model.Count)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function() {
        var selects = $("select");
        selects.attr("disabled", "disabled");
    });
</script>


<div>
    @Html.ActionLink("Back to List", "Index", new { }, new { @class = " btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
